@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (this.User.IsInRole("Owner"))
{
    <p>
        <a class="btn btn-primary" asp-action="New">New Customer</a>
    </p>
}

<table id="customers" class="table table-hover">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Membership Type</th>
            <th>Email</th>
            <th>Birthday</th>
            @if (this.User.IsInRole("Owner"))
             {
                <th class="delete_column">Delete</th>           
             }
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>


@section Scripts
{
    <script>
        $(document).ready(function () {
            const columns = [
                {
                    data: "name",
                    render: function (data, type, customer) {
                        console.log(customer.id)
                        return "<a href='customers/details/" + customer.id + "'>" + customer.name + "</a>";
                    }
                },
                {
                    data: "membershipType.name"
                },
                {
                    data: "email"
                },
                {
                    data: "birthdate"
                },

            ];

            if ($(".delete_column").length) {
                columns.push({
                    data: "id",
                    render: function (data) {
                        return "<button class='btn btn-secondary js-delete' data-customer-id=" + data + ">Delete</button>";
                    }
                })
            }

            $("#customers").DataTable({
                ajax: {
                    url: "api/customers",
                    dataSrc: ""
                },
                columns: columns
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            var table = $("#customers").DataTable();

            $("#customers").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm({
                    message: "Confirm customer deletion?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-success'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: "/api/customers/" + button.attr("data-customer-id"),
                                method: "DELETE",
                                success: function () {
                                    table.row(button.parents("tr")).remove().draw();
                                }
                            });
                        }
                    }
                });

            });
        });
    </script>
}